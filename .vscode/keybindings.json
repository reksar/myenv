[
  // Alternative to Ctrl+Shift+P is F1

  // File navigation by searching
  // Alt+F

  // Switch between file explorer and editor
  // Ctrl+Shift+E

  // Switch between terminal and editor
  // Ctrl+Right
  {
    "key": "alt+right",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },

  {
      "key": "alt+f",
      "command": "workbench.action.quickOpen"
  },
  {
      "key": "ctrl+p",
      "command": "-workbench.action.quickOpen"
  },
  {
      "key": "ctrl+s",
      "command": "workbench.action.tasks.runTask",
      "args": "Export Space Engineers script",
      "when": "resourceFilename == Script.cs && editorTextFocus"
  },
  {
    "key": "ctrl+alt+right",
    "command": "workbench.action.terminal.kill"
  }
]
